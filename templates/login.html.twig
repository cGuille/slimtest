{% extends 'layout.html.twig' %}

{% block title %}Log in â€“ {{ parent() }}{% endblock %}

{% block content %}
  {% if flash.error is defined %}
    <p class="error">
      {{ flash.error }}
    </p>
  {% endif %}
  <form method="post" action="{{ urlFor('login.process') }}">
    <p>
      <label for="email">E-mail: </label><br />
      <input type="email" autofocus required id="email" name="email" value="{{ email }}" placeholder="john.doe@example.com" />
    </p>
    <p>
      <label for="password">Password: </label><br />
      <input type="password" required id="password" name="password" />
    </p>
    <button type="submit">Login</button>
  </form>
  <p>
    Not registered?
    <a href="{{ urlFor('signup.page') }}">Create an account</a>.
  </p>
{% endblock %}
