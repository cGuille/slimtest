{% extends 'layout.html.twig' %}

{% block title %}Sign up â€“ {{ parent() }}{% endblock %}

{% block content %}
  {% if flash.error is defined %}
    <p class="error">
      {{ flash.error }}
    </p>
  {% endif %}
  <form method="post" action="{{ urlFor('signup.process') }}">
    <p>
      <label for="email">E-mail: </label><br />
      <input type="email" autofocus required id="email" name="email" value="{{ email }}" placeholder="john.doe@example.com" />
    </p>
    <p>
      <label for="password">Password: </label><br />
      <input type="password" required id="password" name="password" />
    </p>
    <p>
      <label for="password-confirm">Re-type your password: </label><br />
      <input type="password" required id="password-confirm" name="password-confirm" />
    </p>
    <button type="submit">Sign up</button>
  </form>
{% endblock %}
